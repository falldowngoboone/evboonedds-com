---
# Metadata comes from _data/site.json
permalink: "{{ site.metadata.jsonfeed.path }}"
eleventyExcludeFromCollections: true
---

{
  "version": "https://jsonfeed.org/version/1.1",
  "title": "{{ site.metadata.title }}",
  "language": "{{ site.metadata.language }}",
  "home_page_url": "{{ site.metadata.url }}",
  "feed_url": "{{ site.metadata.jsonfeed.url }}",
  "description": "{{ site.metadata.description }}",
  "author": {
    "name": "{{ site.metadata.author.name }}",
    "url": "{{ site.metadata.author.url }}"
  },
  "items": [{%- for post in collections.post | reverse %}
      {%- set absolutePostUrl %}
      {{ post.url | url | absoluteUrl(site.metadata.url) }}{% endset -%}{
        "id": "{{ absolutePostUrl }}",
        "url": "{{ absolutePostUrl }}",
        "title": "{{ post.data.title }}",
        "content_html":{% if post.templateContent %}
          {{ post.templateContent | dump | safe }}
        {% else %}
          ""{% endif %},
        "date_published": "{{ post.date | rssDate }}"
      }
      {%- if not loop.last -%},
      {%- endif -%}
    {%- endfor %}]
}