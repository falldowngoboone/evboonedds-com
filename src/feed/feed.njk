---
# Metadata comes from _data/site.json
permalink: "{{ site.metadata.feed.path }}"
eleventyExcludeFromCollections: true
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.metadata.title }}</title>
  <subtitle>{{ site.metadata.feed.subtitle }}</subtitle>
  {% set absoluteUrl %}{{ site.metadata.feed.path | url | absoluteUrl(site.metadata.url) }}{% endset %} <link href="{{ absoluteUrl }}" rel="self"/>
  <link href="{{ site.metadata.url }}"/>
  <updated>{{ collections.post | rssLastUpdatedDate }}</updated>
  <id>{{ site.metadata.feed.id }}</id>
  <author>
    <name>{{ site.metadata.author.name }}</name>
    <email>{{ site.metadata.author.email }}</email>
  </author>
  {%- for post in collections.post | reverse %}
    {% set absolutePostUrl %}{{ post.url | url | absoluteUrl(site.metadata.url) }}{% endset %}
    <entry>
      <title>{{ post.data.title }}</title>
      <link href="{{ absolutePostUrl }}"/>
      <updated>{{ post.date | rssDate }}</updated>
      <id>{{ absolutePostUrl }}</id>
      <content type="html">{{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) }}</content>
    </entry>
  {%- endfor %}
</feed>